                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="18dp"
                app:strokeWidth="1dp"
                app:strokeColor="#EFEFEF"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

