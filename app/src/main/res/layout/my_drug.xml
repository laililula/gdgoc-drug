<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB">

    <!-- 하단 네비(너가 준 코드 그대로) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 스크롤 영역 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollMyDrug"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="26dp"
            android:paddingBottom="24dp">

            <!-- 상단 타이틀 -->
            <TextView
                android:id="@+id/tvMyDrugTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나의 약"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#141414"/>

            <!-- 날짜 이동: <  오늘  > -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/ivPrev"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_chevron_left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvToday"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"/>

                <TextView
                    android:id="@+id/tvToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#3D3D3D"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintStart_toEndOf="@id/ivPrev"
                    app:layout_constraintEnd_toStartOf="@id/ivNext"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_chevron_right"
                    app:layout_constraintStart_toEndOf="@id/tvToday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 차트(정적 UI) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chartBox"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp">

                <!-- y축 숫자 -->
                <TextView
                    android:id="@+id/y100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/y50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="108dp"/>

                <TextView
                    android:id="@+id/y0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/line0"/>

                <!-- 가로 라인 -->
                <View
                    android:id="@+id/line100"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:layout_marginStart="34dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"/>

                <View
                    android:id="@+id/line50"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:layout_marginStart="34dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="118dp"/>

                <View
                    android:id="@+id/line0"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:layout_marginStart="34dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="44dp"/>

                <!-- mg -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mg"
                    android:textSize="13sp"
                    android:textColor="#8F8F8F"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line0"
                    android:layout_marginTop="10dp"/>

                <!-- 막대 1 (주황) -->
                <View
                    android:id="@+id/bar1"
                    android:layout_width="36dp"
                    android:layout_height="145dp"
                    android:background="@drawable/bg_bar_orange"
                    app:layout_constraintBottom_toBottomOf="@id/line0"
                    app:layout_constraintStart_toStartOf="@id/line100"
                    android:layout_marginStart="36dp"/>

                <!-- 막대 2 (회색) -->
                <View
                    android:id="@+id/bar2"
                    android:layout_width="36dp"
                    android:layout_height="110dp"
                    android:background="@drawable/bg_bar_gray"
                    app:layout_constraintBottom_toBottomOf="@id/line0"
                    app:layout_constraintStart_toEndOf="@id/bar1"
                    android:layout_marginStart="62dp"/>

                <!-- 막대 3 (회색) -->
                <View
                    android:id="@+id/bar3"
                    android:layout_width="36dp"
                    android:layout_height="110dp"
                    android:background="@drawable/bg_bar_gray"
                    app:layout_constraintBottom_toBottomOf="@id/line0"
                    app:layout_constraintStart_toEndOf="@id/bar2"
                    android:layout_marginStart="62dp"/>

                <!-- x축 라벨 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비타민 A"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    app:layout_constraintTop_toBottomOf="@id/line0"
                    app:layout_constraintStart_toStartOf="@id/bar1"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비타민 B"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    app:layout_constraintTop_toBottomOf="@id/line0"
                    app:layout_constraintStart_toStartOf="@id/bar2"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비타민 D"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    app:layout_constraintTop_toBottomOf="@id/line0"
                    app:layout_constraintStart_toStartOf="@id/bar3"
                    android:layout_marginTop="18dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 카드 1 -->
            <com.google.android.material.card.MaterialCardView
