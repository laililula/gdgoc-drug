                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgB1"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/drug_brufen"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/ko2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="부루펜정200mg"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#111111"
                            android:layout_marginStart="12dp"
                            app:layout_constraintStart_toEndOf="@id/imgB1"
                            app:layout_constraintTop_toTopOf="@id/imgB1"
                            app:layout_constraintEnd_toStartOf="@id/arrow2"/>

                        <TextView
                            android:id="@+id/en2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Brufen Tab. 200mg"
                            android:textSize="12sp"
                            android:textColor="#8E8E8E"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toEndOf="@id/imgB1"
                            app:layout_constraintTop_toBottomOf="@id/ko2"
                            app:layout_constraintEnd_toStartOf="@id/arrow2"/>

                        <ImageView
                            android:id="@+id/arrow2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_chevron_right"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 설명 박스 -->
                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_desc"
                        android:padding="16dp"
                        android:textColor="#3D3D3D"
                        android:textSize="13sp"
                        android:lineSpacingExtra="3dp"
                        android:text="비타민 A가 풍부한 음식으로는 당근, 시금치, 고구마, 그리고 간이 있습니다. 이 음식들은 시력을 보호하고 면역력을 높이는 데 도움을 줍니다."/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- 카드 2 -->
            <com.google.android.material.card.MaterialCardView
